{
  "name": "simpel",
  "version": "0.4.0",
  "description": "Minimalistic JavaScript UI library.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --color src --ext .js",
    "test": "mocha --require tests.setup.js src/*.spec.js*",
    "test:watch": "npm test -- --watch",
    "clean": "rimraf lib",
    "build": "npm run clean && babel src --out-dir lib --ignore spec.js",
    "prepublish": "npm run test && npm run build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danillouz/lego.git"
  },
  "keywords": [
    "simple",
    "html",
    "elements",
    "jsx"
  ],
  "author": "Daniel Illouz",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/danillouz/lego/issues"
  },
  "homepage": "https://github.com/danillouz/lego#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "debug": "^2.2.0",
    "eslint": "^3.0.1",
    "eslint-config-danistyle": "^1.0.1",
    "jsdom": "^9.4.1",
    "mocha": "^2.5.3",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.5.3",
    "sinon": "^1.17.4"
  }
}
